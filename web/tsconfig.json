{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "types",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "lib": ["esnext", "dom"]
  }
}
